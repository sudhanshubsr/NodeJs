<h1 class="login-title">Login</h1>
<form action="/users/create-session" method="POST" class="login-form">
  <label for="email" class="input-label">Email:</label>
  <input type="email" id="email" name="email" required class="text-input" />
  <br />
  <label for="password" class="input-label">Password:</label>
  <input type="password" id="password" name="password" required class="text-input" />
  <br />
  <button type="submit" class="login-button">Login</button>
</form>

<p class="google-sign-in">
  <a class="google-sign-in-link" href="/users/auth/google">Sign In with Google</a>
</p>
